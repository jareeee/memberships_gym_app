<div class="min-h-screen text-white w-[390px] relative">
  <!-- Header -->
  <div class="flex items-center relative justify-between mb-8 mt-7">
    <%= link_to root_path, class:"absolute" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 18 16" fill="none">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M18 8C18 8.41421 17.6642 8.75 17.25 8.75H2.56031L8.03063 14.2194C8.32368 14.5124 8.32368 14.9876 8.03063 15.2806C7.73757 15.5737 7.26243 15.5737 6.96937 15.2806L0.219375 8.53063C0.0785422 8.38995 -0.000590086 8.19906 -0.000590086 8C-0.000590086 7.80094 0.0785422 7.61005 0.219375 7.46937L6.96937 0.719375C7.26243 0.426319 7.73757 0.426319 8.03063 0.719375C8.32368 1.01243 8.32368 1.48757 8.03063 1.78062L2.56031 7.25H17.25C17.6642 7.25 18 7.58579 18 8Z" fill="white"/>
      </svg>
    <% end %>
    <h1 class="text-[18px] font-bold mx-auto">Profile</h1>
  </div>

  <!-- Profile Picture and Info -->
  <div class="text-center mb-8">
    <div class="relative mx-auto w-32 h-32 mb-4">
      <div class="w-32 h-32 rounded-full bg-gray-400 flex items-center justify-center overflow-hidden">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </div>
    </div>
    
    <h1 class="text-[22px] font-bold mb-1"><%= current_user.full_name %></h1>
    <p class="text-[#8FA8CC] text-base"><%= current_user.email %></p>
  </div>

  <!-- Profile Options -->
  <div class="space-y-4 mb-8">
    <!-- Edit Profile Button -->
    <%= link_to profile_edit_path, class: "w-full flex items-center" do %>
      <div class="w-[48px] h-[48px] rounded-lg bg-[#21334A] flex items-center justify-center mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 20 20" fill="none">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M19.6488 17.875C18.2209 15.4066 16.0206 13.6366 13.4528 12.7975C16.0635 11.2433 17.3141 8.13638 16.5082 5.2069C15.7022 2.27741 13.0383 0.247449 10 0.247449C6.96167 0.247449 4.29779 2.27741 3.49182 5.2069C2.68585 8.13638 3.93645 11.2433 6.54719 12.7975C3.97938 13.6356 1.77906 15.4056 0.35125 17.875C0.208704 18.1074 0.203527 18.3989 0.337731 18.6363C0.471935 18.8736 0.724375 19.0194 0.997024 19.0171C1.26967 19.0147 1.51958 18.8646 1.64969 18.625C3.41594 15.5725 6.53781 13.75 10 13.75C13.4622 13.75 16.5841 15.5725 18.3503 18.625C18.4804 18.8646 18.7303 19.0147 19.003 19.0171C19.2756 19.0194 19.5281 18.8736 19.6623 18.6363C19.7965 18.3989 19.7913 18.1074 19.6488 17.875ZM4.75 7C4.75 4.1005 7.1005 1.75 10 1.75C12.8995 1.75 15.25 4.1005 15.25 7C15.25 9.8995 12.8995 12.25 10 12.25C7.10179 12.2469 4.7531 9.89821 4.75 7Z" fill="white"/>
        </svg>
      </div>
      <span class="text-base">Edit Profile</span>
    <% end %>

    <!-- Change Password Button -->
    <%= link_to edit_user_registration_path, class: "w-full flex items-center" do %>
      <div class="w-[48px] h-[48px] rounded-lg bg-[#21334A] flex items-center justify-center mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <circle cx="12" cy="16" r="1"></circle>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
      </div>
      <span class="text-base">Change Password</span>
    <% end %>
  </div>

  <!-- Logout Button -->
  <%= button_to destroy_user_session_path, method: :delete, 
      class: "w-full bg-[#C93B3B] text-white py-3 rounded-3xl font-bold hover:bg-red-600 transition-colors absolute bottom-5 left-0",
      data: { confirm: "Are you sure you want to log out?" } do %>
    Log out
  <% end %>
</div>