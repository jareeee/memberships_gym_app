<div class="relative min-h-screen flex items-center justify-center px-6">
  <div class="flex flex-col items-center w-full max-w-md">
    <!-- Header with back button -->
    <div class="flex items-center w-full mb-8">
      <%= link_to new_user_session_path, class: "text-white text-2xl" do %>
        â†
      <% end %>
      <h1 class="text-white text-[18px] font-bold flex-1 text-center">
        Sign Up
      </h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", class: "w-full h-[56px] rounded-xl text-start bg-[#2B3340] p-[16px] text-[#9EABBF]" %>

      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "w-full h-[56px] rounded-xl text-start bg-[#2B3340] p-[16px] mt-[24px] text-[#9EABBF]" %>

      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full h-[56px] rounded-xl text-start bg-[#2B3340] p-[16px] mt-[24px] text-[#9EABBF]" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "w-full h-[56px] rounded-xl text-start bg-[#2B3340] p-[16px] mt-[24px] text-[#9EABBF]" %>

      <%= f.button "Create Account", class: "flex h-[48px] w-full rounded-3xl bg-[#DBE5F2] text-[#141A1F] font-semibold justify-center items-center mt-[24px] text-base font-bold" %>
    <% end %>

    <div class="flex flex-row gap-1 mt-[16px] text-sm font-normal leading-[21px]">
      <p class="text-[#9EABBF]">Already have an account?</p>
      <%= link_to "Login", new_user_session_path, class: "text-white" %>
    </div>
  </div>
</div>